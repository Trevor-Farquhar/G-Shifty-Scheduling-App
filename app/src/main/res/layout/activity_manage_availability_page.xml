<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_availability_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAvailabilityPage"
    tools:ignore="HardcodedText">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:singleSelection="true">


        <Button
            android:id="@+id/manageavail_availBTN"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:textColor="@color/purple"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/manageavail_userinfoBTN"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Info"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="65dp" />

        <Button
            android:id="@+id/manageavail_daysoffBTN"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days Off"
            tools:layout_editor_absoluteX="264dp"
            tools:layout_editor_absoluteY="63dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <Switch
        android:id="@+id/manage_avail_morning_mon"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Mon"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Switch
        android:id="@+id/manage_avail_morning_fri"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Fri"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_morning_thu"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_morning_thu" />

    <Switch
        android:id="@+id/manage_avail_morning_wed"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Wed"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_morning_tue" />

    <Switch
        android:id="@+id/manage_avail_morning_thu"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Thu"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_morning_wed"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_morning_wed" />

    <Switch
        android:id="@+id/manage_avail_morning_tue"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Tue"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_morning_mon" />

    <Switch
        android:id="@+id/manage_avail_afternoon_mon"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Mon"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Switch
        android:id="@+id/manage_avail_afternoon_tue"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Tue"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_afternoon_mon"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_afternoon_mon" />

    <Switch
        android:id="@+id/manage_avail_afternoon_wed"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Wed"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_afternoon_tue"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_afternoon_tue" />

    <Switch
        android:id="@+id/manage_avail_afternoon_thu"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Thu"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_afternoon_wed"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_afternoon_wed" />

    <Switch
        android:id="@+id/manage_avail_afternoon_fri"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Fri"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_afternoon_thu"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_afternoon_thu" />

    <Switch
        android:id="@+id/manage_avail_weekend_sat"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Sat"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_morning_fri"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Switch
        android:id="@+id/manage_avail_weekend_sun"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Sun"
        app:layout_constraintStart_toStartOf="@+id/manage_avail_afternoon_fri"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:text="Morning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Afternoon"
        app:layout_constraintBottom_toTopOf="@+id/manage_avail_afternoon_mon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text="Weekend Availability"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/manage_avail_afternoon_fri" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Weekday Availability"
        app:layout_constraintEnd_toEndOf="@+id/toggleButtonGroup"
        app:layout_constraintStart_toStartOf="@+id/toggleButtonGroup"
        app:layout_constraintTop_toBottomOf="@+id/toggleButtonGroup" />

    <ImageButton
        android:id="@+id/manageavail_backBTN"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow" />

    <ImageButton
        android:id="@+id/manage_avail_homeBTN"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home" />

</androidx.constraintlayout.widget.ConstraintLayout>